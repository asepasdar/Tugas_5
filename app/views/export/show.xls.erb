<table border="1">
	<tr>
		<th>id</th>
		<th>title</th>
		<th>body</th>
		<th>Comments</th>
	</tr>
	<tr>
		<td><%= @post.id %></td>
		<td><%= @post.title %></td>
		<td><%= @post.body %></td>
		<td><%= @post.comments.count %> Comments</td>
	</tr>
</table>
<br>
<table border="1">
	<tr>
		<th colspan="2">Comments</th>
	</tr>
	<tr>
		<th>Name</th>
		<th>Comment</th>
	</tr>
	<% @post.comments.each do |comment| %>
		<tr>
			<td><%= comment.name %></td>
			<td><%= comment.body %></td>
		</tr>
	<% end %>
</table>