<div id="post_content">
	Download :
	<%= link_to "Excel", export_path(@post, format: "xls") %>
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<h3 class="title">
		<%= social_share_button_tag(@post.title) %>
	</h3>
	<p>Tag : <%= @post.tag_list.map { |t| link_to t, tag_list_path(t) }.join(', ').html_safe %></p>
	<p>Created By : <b><i><%= @post.user.username %></i></b></p>
	<p class="date">
		<b>Submitted <%= time_ago_in_words(@post.created_at) %> Ago </b>
		
		<!-- Check this function in application_helper.rb -->
		<%= permit(@post) %>
	</p>
	<p class="body">
		<%= raw (@post.body) %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<!-- Check this function in application_helper.rb -->
		<%= comment_form %>
	</div>
</div>